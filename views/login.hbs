<div class="container">
    <div class="row">
        <div class="col s12 m12">
            <div class="card ">
                <div class="card-content">
                    <span class="card-title">Login with your account!</span>
                    <div class="row">
                        {{#if message.success}}
                            <div class="card green darken-3">
                                <div class="card-content white-text">
                                    <span class="card-title">Success</span>
                                    <li>{{message.success}}</li>
                                </div>
                            </div>
                        {{/if}}
                        <form class="col s12" method="POST" action="/users/login">
                            <div class="row">
                               <div class="input-field col s6">
                                    <input id="email" name="email" type="email" class="validate" required>
                                    <label for="email">E-mail</label>
                                </div>
                                <div class="input-field col s6">
                                    <input id="password" name="password" type="password" class="validate" required>
                                    <label for="password">Password</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <button class="btn waves-effect waves-light indigo darken-4" type="submit" name="action">
                                        Login
                                        <i class="material-icons right">send</i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>