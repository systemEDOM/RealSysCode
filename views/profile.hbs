<div class="container">
    <div class="row">
        {{> success }}
        {{> errors }}
        <div class="col s12 m5">
            <div class="card grey lighten-2">
                <div class="card-content">
                    <span class="card-title">Information</span>
                    <p>
                        Name: <b>{{userFound.name}}</b>
                    </p>
                    <p>
                        Username: <b>{{userFound.slugUsername}}</b>
                    </p>
                    <p>
                        E-mail: <b>{{userFound.email}}</b>
                    </p>
                </div>
                {{#compare user.username '==' userFound.username}}
                {{> modal_update_user}}
                <div class="card-action">
                    <button class="blue waves-effect waves-light btn modal-trigger"
                        data-target="modal_update_user">Update</button>
                    <button class="blue waves-effect waves-light btn modal-trigger"
                        data-target="modal_update_password_user">Update Password</button>
                </div>
                {{/compare}}
            </div>
        </div>
        <div class="col s12 m7">
            <div class="card grey lighten-2">
                <div class="card-content">
                    <span class="card-title">Snippets</span>
                    <div class="row">
                        <ul class="collection with-header">
                            <li class="collection-header">
                                <h4>Snippets Collection</h4>
                            </li>
                            {{#each snippetsByUser.snippets}}
                            <li class="collection-item">
                                <div>
                                    <a href="/snippets/{{this.slug}}"><b>{{this.title}}</b></a>
                                    <br>
                                    {{this.short_description}}
                                    <a href="/snippets/{{this.slug}}"
                                        onclick="event.preventDefault(); document.getElementById('delete{{this._id}}').submit();"
                                        class="secondary-content"><i class="material-icons">delete</i></a>
                                    <form id="delete{{this._id}}" action="/snippets/{{this._id}}?_method=DELETE"
                                        method="POST" style="display: none;">
                                    </form>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>